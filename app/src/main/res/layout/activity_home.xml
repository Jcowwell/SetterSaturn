<?xml version="1.0" encoding="utf-8"?>

<!--Home Screen-->
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jevon.settersaturn.HomeActivity"
    android:background="@color/background">

    <!--Frame Layout for future Recycler View-->

    <FrameLayout
        android:id="@+id/home_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/tracked_courses_will_show_up_here"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:alpha=".25"
            android:fontFamily="@font/brandon_bld" />

    </FrameLayout>

</RelativeLayout>
